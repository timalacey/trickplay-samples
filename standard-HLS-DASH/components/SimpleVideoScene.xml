<component name="SimpleVideoScene" extends="Scene">
  <interface>
    <field id="exitApp" type="boolean" value="false"/>
  </interface>

  <script type="text/brightscript" uri="pkg:/components/SimpleVideoScene.brs"/>

  <children>
    <Poster id="Image" translation="[300,250]"/>
    <Label id="Title" font="font:LargeBoldSystemFont" translation="[800, 250]" width="850"/>
    <ButtonGroup id="ButtonGroup" translation="[800,325]"/>

    <Label
      id="Details"
      height="300"
      width="1300"
      font="font:MediumBoldSystemFont"
      text="PUT DETAILS TEXT HERE"
      wrap="true"
      translation="[300,600]"/>

    <Overhang
      showClock="true"
      title="Thumbnail Trickplay Bar Example"/>

    <ExtVideoPlayerUI
      id="Video"
      width="1920"
      height="1080"
      translation="[0,0]"
      visible="false"/>

    <Dialog
      id="WarningDialog"
      title="Warning"
      message="PUT A WARNING MESSAGE HERE"
      visible="false"/>

  </children>
</component>
